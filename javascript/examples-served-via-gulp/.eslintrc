{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 4, {"SwitchCase": 1}],
    "quotes": [2, "backtick"],
    "semi": [2, "always"],
    "linebreak-style": [2, "unix"],
    "max-len": [1, 85]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended"
}
